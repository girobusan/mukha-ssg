<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{config.title}} : {{page.meta.title}}</title>
  <style>
    body,
    html {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
        Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      line-height: 1.4em;
    }

    .page_li p {
      margin-top: 0;
    }
  </style>
  {{ jsapi }}
</head>

{% set MENU=list.getNearDirs("/index.html").sortByMeta("menuitem") %}
{% if page.index %}
{% set LIST=list.getNearFiles(page.permalink) %}
{% elseif page.tag %}
{% set LIST=page.list %}
{% endif %}

<body>
  <nav>
    <a href="/index.html"><strong>{{config.title}}</strong></a>&nbsp;
    {% for M in MENU %}
    <a href="{{M.file.path}}">{{M.meta.title}}</a>
    {% if not loop.last %}&nbsp;{% endif %}
    {% endfor %}
  </nav>
  <hr>
  <main>
    <h1>{{meta.title}}</h1>
    {% if page.meta.tags %}
    {% for T in page.meta.tags %}
    <small>
      <a href="{{T.file.path}}">{{T.meta.title}}</a>{% if not loop.last %}, {% endif %}
    </small>
    {% endfor %}
    {% endif %}
    <article>{{html}}</article>
  </main>

  {% if LIST %}
  <ul>
    {% for P in LIST %}
    <li class="page_li"><a href="{{P.file.path}}"><strong>{{P.meta.title}}</strong></a><br>
      {% if P.meta.excerpt and not page.tag %}
      <small>{{P.meta.excerpt}}</small>
      {% endif %}
    </li>
    {% endfor %}
  </ul>
  {% endif %}
  <hr>
  <footer>
    <small>{% if config.motto %}{{config.motto}}{% endif %}</small>
  </footer>

</body>

</html>
